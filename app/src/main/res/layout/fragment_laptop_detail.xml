<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:elevation="10dp">

    <ImageView
        android:id="@+id/imgLaptop"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.262"
        app:layout_constraintStart_toEndOf="@+id/imgLaptop"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.108"
        tools:text="Laptop 1" />

    <TextView
        android:id="@+id/txtDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:paddingBottom="10dp"
        app:layout_constraintTop_toBottomOf="@+id/imgLaptop"
        tools:text="Bacon ipsum dolor amet leberkas prosciutto salami brisket filet mignon.
        Corned beef jerky sausage ham hock sirloin pork loin landjaeger picanha spare ribs meatloaf prosciutto kevin andouille porchetta shankle.
        Jerky ribeye kevin ham pancetta strip steak biltong burgdoggen, pork chop pork loin pig beef ribs andouille hamburger.
        Fatback landjaeger brisket short loin spare ribs sausage cow. Short ribs landjaeger boudin chicken shoulder turducken flank." />
</android.support.constraint.ConstraintLayout>
